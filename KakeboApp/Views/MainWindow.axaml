<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:KakeboApp.ViewModels"
        xmlns:views="using:KakeboApp.Views"
        x:Class="KakeboApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Kakebo - GestiÃ³n Financiera Japonesa"
        Width="1200"
        Height="800"
        MinWidth="800"
        MinHeight="600">

    <Grid ColumnDefinitions="200,*">
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel Margin="0,20">
                <TextBlock Text="KAKEBO"
                          Foreground="White"
                          FontSize="24"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <StackPanel IsVisible="{Binding IsConnected}">
                    <Button Content="ðŸ“Š Transacciones"
                            Command="{Binding ShowTransactionsCommand}"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,15"
                            Margin="0,2"
                            HorizontalContentAlignment="Left"/>

                    <Button Content="ðŸ’° Presupuesto"
                            Command="{Binding ShowBudgetCommand}"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,15"
                            Margin="0,2"
                            HorizontalContentAlignment="Left"/>

                    <Button Content="ðŸ“ˆ Reportes"
                            Command="{Binding ShowReportsCommand}"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,15"
                            Margin="0,2"
                            HorizontalContentAlignment="Left"/>
                </StackPanel>

                <Button Content="âš™ï¸ ConfiguraciÃ³n"
                        Command="{Binding ShowConnectionCommand}"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,15"
                        Margin="0,2"
                        HorizontalContentAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Contenido principal -->
        <ContentControl Grid.Column="1"
                       Content="{Binding CurrentPage}"
                       Background="#ECF0F1">

            <ContentControl.DataTemplates>

                <!-- Database Connection View -->
                <DataTemplate DataType="vm:DatabaseConnectionViewModel">
                    <views:DatabaseConnectionView />
                </DataTemplate>

                <!-- Transactions View -->
                <DataTemplate DataType="vm:TransactionsViewModel">
                    <views:TransactionsView />
                </DataTemplate>

                <!-- Budget View -->
                <DataTemplate DataType="vm:BudgetViewModel">
                    <views:BudgetView />
                </DataTemplate>

                <!-- Reports View -->
                <DataTemplate DataType="vm:ReportsViewModel">
                    <views:ReportsView />
                </DataTemplate>

            </ContentControl.DataTemplates>
        </ContentControl>
    </Grid>

</Window>
